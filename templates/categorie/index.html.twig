{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}


    <div class="container py-5">
    
        <h1>Catégories</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td>
                        <a href="{{ path('categorie_show', {'id': categorie.id}) }}" class="btn btn-success mx-auto">afficher</a>
                        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning ml-3">modifier</a>
                        
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('categorie_new') }}" class="btn btn-primary">Ajouter une nouvelle catégorie</a>
    </div>
{% endblock %}
